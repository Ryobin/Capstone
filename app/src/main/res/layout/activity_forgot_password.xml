<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ForgotPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/White"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/White"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logoliteratures"
                    android:layout_gravity="center" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/toolbar_title_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="serif-monospace"
                    android:text="Literatures"
                    android:textSize="20sp"
                    android:textColor="@color/oldPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingEnd="50dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingStart="50dp"
        android:paddingBottom="50dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/applogo_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.AppCompatEditText
                android:drawableLeft="@drawable/ic_username_24dp"
                android:id="@+id/forgot_enter_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textSize="20sp"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorPrimaryDark" />


            <android.support.v7.widget.AppCompatEditText
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:id="@+id/forgot_enter_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="serif-monospace"
                android:hint="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorPrimaryDark" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="forgot password"
            android:textColor="@color/White"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fp_login"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:text="Already have an account? Login here."/>

    </LinearLayout>


</LinearLayout>